<div class="mt-4">
    <h3 class="text-big display-center">Tạo Món</h3>
      <form  method="POST" action="/admin/ingredient/stored">
            <div class="form-group">
                <label class="text mt-4 " for="name">Name</label>
                <input type="text" class="form-control" id="ingredientName" name="name" placeholder="Enter name of ingredient">
            </div>
            <div class="form-group">
                <label class="text mt-4" for="price">Price</label>
                <input type="text" class="form-control" id="ingredientPrice" name="price" placeholder="Enter email of ingredient">
            </div>
            <div class="form-group">
                <label class="text mt-4" for="quantity">Quantity</label>
                <input type="text" class="form-control" id="ingredientQuantity" name="quantity" placeholder="Enter email of ingredient">
            </div>
            <div class="form-group">
                <label class="text mt-4" for="img">Image</label>
                <input type="text" class="form-control" id="ingredientImg" name="img" placeholder="Enter img of ingredient">
            </div>
            <button type="submit" class="btn btn-primary backgound-color mt-4 text-color">Thêm Nguyên Liệu</button>
        </form>
</div>